<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/spacing_small"
    android:layout_marginRight="@dimen/spacing_small"
    android:paddingTop="@dimen/spacing_normal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--详情-->

    <!--头像-->
    <com.nexuslink.util.CircleImageView
        android:id="@+id/user_image"
        android:layout_width="@dimen/image_size_small"
        android:layout_height="@dimen/image_size_small"
        android:layout_marginLeft="3dp"
        android:src="@mipmap/default_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
    <!--用户个人信息-->


    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="张兴锐"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/font_normal"
        tools:layout_conversion_absoluteX="60dp"
        tools:layout_conversion_absoluteY="0dp"
        tools:layout_conversion_absoluteWidth="45dp"
        tools:layout_conversion_absoluteHeight="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/user_image" />
    <!--日期和楼层-->
    <TextView
        android:text="1121515"
        android:id="@+id/article_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/font_small"
        tools:layout_conversion_absoluteX="60dp"
        tools:layout_conversion_absoluteY="30dp"
        tools:layout_conversion_absoluteWidth="0dp"
        tools:layout_conversion_absoluteHeight="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="0.117"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        app:layout_constraintLeft_toRightOf="@+id/user_image"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/comment_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1搂"
        android:textColor="@color/ufo_green"
        android:textSize="@dimen/font_normal"
        tools:layout_conversion_absoluteX="325dp"
        tools:layout_conversion_absoluteY="30dp"
        tools:layout_conversion_absoluteWidth="23dp"
        tools:layout_conversion_absoluteHeight="18dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/article_date_tv" />


    <com.vanniktech.emoji.EmojiTextView
        android:id="@+id/comment_text"
        android:textColor="@color/primary_text"
        android:text="fdjfkljdljfljadslf"
        android:textSize="@dimen/font_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/user_image"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/article_date_tv" />

</android.support.constraint.ConstraintLayout>
