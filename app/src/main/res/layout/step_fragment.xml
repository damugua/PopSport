<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--头部-->
    <android.support.constraint.ConstraintLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_weight="0.65">

        <TextView
            android:text="0"
            android:id="@+id/current_steps_tv"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_super_huger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.3" />

        <TextView
            android:text="当前步数"
            android:gravity="center"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/colorPrimaryLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/current_steps_tv"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/current_steps_tv"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/current_steps_tv" />

        <TextView
            android:text="0"
            android:id="@+id/history_average_steps"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_below_huge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/textView2"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView2"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2" />

        <TextView
            android:text="历史平均"
            android:gravity="center"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="@dimen/font_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/textView2"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:text="0"
            android:id="@+id/history_best_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_below_huge"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/textView3"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView3" />

        <TextView
            android:layout_height="wrap_content"
            android:text="历史最佳"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="@dimen/font_small"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:id="@+id/textView3" />

    </android.support.constraint.ConstraintLayout>


    <!--柱形图-->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/charter"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
     ></com.github.mikephil.charting.charts.BarChart>

</LinearLayout>

