<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:clickable="true"
    android:background="@drawable/selector_rank">
<TextView
    android:id="@+id/rank_num"
    android:layout_width="@dimen/font_huge"
    android:layout_height="@dimen/font_larger"
    android:layout_marginLeft="@dimen/spacing_large"
    style="@style/TextAppearance.AppCompat.Title"
    android:textColor="@color/colorPrimary"
    android:layout_centerVertical="true"/>
    <com.nexuslink.util.CircleImageView
        android:id="@+id/head_image"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_toRightOf="@id/rank_num"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/head_image"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="@dimen/spacing_small"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/spacing_huge"
        android:layout_centerVertical="true"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/font_large"/>
    <ImageView
        android:src="@drawable/right_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/spacing_tiny"/>
</RelativeLayout>