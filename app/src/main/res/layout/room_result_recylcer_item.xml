<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/run_house_item_backgourd"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/spacing_tiny"
    android:paddingBottom="@dimen/spacing_tiny"
    android:layout_height="wrap_content">

    <com.nexuslink.util.CircleImageView
        android:id="@+id/user_image"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_gravity="center"
        android:layout_width="@dimen/image_size_small"
        android:layout_height="@dimen/image_size_small" />

    <LinearLayout
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/user_name"
            android:layout_marginLeft="@dimen/spacing_tiny"
            android:textColor="@color/one_class_text_color"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />w


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/type"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/spacing_tiny"
                android:src="@drawable/history_time"
                android:layout_width="@dimen/image_size_tiny"
                android:layout_height="@dimen/image_size_tiny" />
            <TextView
                android:layout_gravity="start"
                android:id="@+id/goal"
                android:textSize="@dimen/font_normal"
                android:layout_marginLeft="@dimen/spacing_tiny"
                android:textColor="@color/one_class_text_color"
                android:text="2017-2-28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>